<div id='approve-<%= dom_id(approve_video) %>'>
  <p><%= link_to approve_video.name, approve_video.youtube_url %></p>
  <p><%= approve_video.description %></p>
  <div class='video-thumbnail'>
    <%= link_to image_tag(youtube_thumbnail(approve_video), width: '100'),
      approve_video.youtube_url
    %>
  </div>
  <% if current_user.moderator? %>
    <p>
      <%= button_to 'Approve',
        unpublished_submission_path(approve_video),
        remote: true,
        method: :patch
      %>
    </p>
  <% end %>
  <% if current_user.admin? %>
    <p>
      <%= button_to 'Delete',
        submission_path(approve_video),
        remote: true,
        method: :delete,
        confirm: 'Are you sure you wish to delete this submission permanently?
                  This can not be undone!'
      %>
    </p>
  <% end %>
</div>
