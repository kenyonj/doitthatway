<div id='approve-<%= dom_id(approve_video) %>'>
  <div class='video-name'>
    <%= link_to approve_video.name, approve_video.youtube_url %>
  </div>
  <div class='video-thumbnail'>
    <%= link_to image_tag(youtube_thumbnail(approve_video)),
      approve_video.youtube_url
    %>
  </div>
  <div class='video-description'>
    <%= approve_video.description %>
    <div class='approval-buttons'>
      <% if current_user.moderator? %>
        <p>
          <%= button_to 'Approve',
            unpublished_submission_path(approve_video),
            remote: true,
            method: :patch
          %>
        </p>
      <% end %>
      <% if current_user.admin? %>
        <p>
          <%= button_to 'Delete',
            submission_path(approve_video),
            remote: true,
            method: :delete,
            confirm: 'Are you sure you wish to delete this submission permanently?
                      This can not be undone!'
          %>
        </p>
      <% end %>
    </div>
  </div>
</div>
